#!/bin/bash
set -u -e -x
DIND_ROOT="${PWD}"
. build/funcs.sh
if [[ ${DOCKER_TAG} =~ v1.7$ ]]; then
  HYPERKUBE_URL=${HYPERKUBE_URL_1_7}
  HYPERKUBE_SHA1=${HYPERKUBE_SHA1_1_7}
  KUBEADM_URL=${KUBEADM_URL_1_7}
  KUBEADM_SHA1=${KUBEADM_SHA1_1_7}
elif [[ ${DOCKER_TAG} =~ v1.8$ ]]; then
  HYPERKUBE_URL=${HYPERKUBE_URL_1_8}
  HYPERKUBE_SHA1=${HYPERKUBE_SHA1_1_8}
  KUBEADM_URL=${KUBEADM_URL_1_8}
  KUBEADM_SHA1=${KUBEADM_SHA1_1_8}
else
  HYPERKUBE_URL=${HYPERKUBE_URL_1_9}
  HYPERKUBE_SHA1=${HYPERKUBE_SHA1_1_9}
  KUBEADM_URL=${KUBEADM_URL_1_9}
  KUBEADM_SHA1=${KUBEADM_SHA1_1_9}
fi
dind::build-image "${IMAGE_NAME}"
